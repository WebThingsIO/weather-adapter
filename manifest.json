{
  "author": "WebThingsIO",
  "description": "Current weather conditions",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "{nodeLoader} {path}",
      "primary_type": "adapter",
      "strict_max_version": "*",
      "strict_min_version": "0.10.0"
    }
  },
  "homepage_url": "https://github.com/WebThingsIO/weather-adapter#readme",
  "id": "weather-adapter",
  "license": "MPL-2.0",
  "manifest_version": 1,
  "name": "Weather",
  "options": {
    "default": {
      "locations": [],
      "units": "imperial",
      "provider": "OpenWeatherMap",
      "useDefaultOpenWeatherMapApiKey": true,
      "apiKey": "",
      "pollInterval": 60
    },
    "schema": {
      "type": "object",
      "required": [
        "locations",
        "units",
        "provider",
        "pollInterval"
      ],
      "properties": {
        "locations": {
          "title": "Locations",
          "description": "List of locations",
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "latitude",
              "longitude"
            ],
            "properties": {
              "name": {
                "title": "Name",
                "description": "Name of location",
                "type": "string"
              },
              "latitude": {
                "title": "Latitude",
                "description": "Latitude of location",
                "type": "number"
              },
              "longitude": {
                "title": "Longitude",
                "description": "Longitude of location",
                "type": "number"
              }
            }
          }
        },
        "units": {
          "title": "Units",
          "description": "Units to use, i.e. imperial for \u02daF, metric for \u02daC",
          "type": "string",
          "enum": [
            "metric",
            "imperial"
          ]
        },
        "provider": {
          "title": "Provider",
          "description": "Weather data provider to use",
          "type": "string",
          "enum": [
            "OpenWeatherMap",
            "DarkSky",
            "AccuWeather",
            "WeatherUnderground"
          ]
        },
        "useDefaultOpenWeatherMapApiKey": {
          "title": "Use Default OpenWeatherMap API Key",
          "description": "If enabled, polling will be limited to once per hour",
          "type": "boolean"
        },
        "apiKey": {
          "title": "API Key",
          "description": "API key for the selected provider",
          "type": "string"
        },
        "pollInterval": {
          "title": "Poll Interval",
          "description": "Interval in minutes at which to poll the provider",
          "type": "integer",
          "minimum": 10
        }
      }
    }
  },
  "short_name": "Weather",
  "version": "0.6.0"
}
